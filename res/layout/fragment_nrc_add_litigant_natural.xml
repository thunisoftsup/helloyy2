<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_dp_8"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nrc_al_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="姓名"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/nrc_aln_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nrc_al_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="性别"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/nrc_aln_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_dp_8"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nrc_al_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/nrc_aln_certificate_type"
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nrc_aln_certificate_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:layout_weight="0"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_size_16" />

            <View
                android:layout_width="@dimen/nrc_bottom_arrow_width"
                android:layout_height="@dimen/nrc_bottom_arrow_height"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:layout_marginRight="8dp"
                android:background="@drawable/arrow_bottom_expand" />
            <RelativeLayout 
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@color/divider_color_gray" />
            </RelativeLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/nrc_aln_certificate_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/id_card_regex"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="18"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nrc_al_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="出生日期"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/nrc_aln_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="left|center_vertical"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nrc_al_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="手机号码"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/nrc_aln_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:inputType="phone"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider_color_gray"
        android:gravity="center_vertical|left"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_20"
        android:paddingTop="@dimen/padding_15"
        android:text="经常居住地 :"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/nrc_al_item_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="省、市、区"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/nrc_aln_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="left"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:minHeight="@dimen/nrc_al_location_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/nrc_al_left_tip_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="详细地址"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_size_16"
            />

        <EditText
            android:id="@+id/nrc_aln_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="17dp"
            android:background="@null"
            android:maxLength="100"
            android:textColor="@color/text_color_deep_black"
            android:textSize="@dimen/font_size_16" 
           />
    </LinearLayout>

</LinearLayout>