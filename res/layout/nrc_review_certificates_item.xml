<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="@dimen/nrc_review_basic_margin"
    android:orientation="vertical"
    android:background="@color/white">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/certificates_owner_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="北京市某某股份有限公司"/>
        <TextView 
            android:id="@+id/certificates_owner_type"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="其他组织"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/certificates_type"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="北京市某某股份有限公司"/>
        <LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:paddingBottom="5dp"
        	android:gravity="center_vertical"
        	android:orientation="horizontal">
        	<LinearLayout 
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:paddingTop="5dp"
        		android:paddingBottom="5dp"
        		android:gravity="center_vertical"
        		android:orientation="vertical">
   
        		<ImageView 
            		android:id="@+id/certificates_front_image"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:background="@drawable/ic_launcher"/>
        		<TextView 
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="正面"/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:paddingTop="5dp"
        		android:paddingBottom="5dp"
        		android:gravity="center_vertical"
        		android:orientation="vertical">
        		<ImageView 
            		android:id="@+id/certificates_back_image"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:background="@drawable/ic_launcher"/>
        		<TextView 
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="反面"/>
    		</LinearLayout>
    	</LinearLayout>
    </LinearLayout>
  	<LinearLayout 
  	    android:id="@+id/business_certificates"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical">
  	    <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="营业执照"/>
  	    <ImageView 
            android:id="@+id/certificates_business_image"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/ic_launcher"/>
  	</LinearLayout>


</LinearLayout>