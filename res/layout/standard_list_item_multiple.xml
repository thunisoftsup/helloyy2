<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_page_default"
    android:paddingTop="@dimen/default_page_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_item_multiple_height"
        android:background="@drawable/corner_bg_white"
        android:padding="@dimen/default_page_padding" >

        <TextView
            android:id="@+id/divider"
            android:layout_width="@dimen/border_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/default_page_padding"
            android:layout_toLeftOf="@+id/layout_btn_right"
            android:background="@color/border_default" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/standard_item_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/default_page_padding"
            android:layout_toLeftOf="@+id/divider"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ddddd" />

        <TextView
            android:id="@+id/tv_left"
            style="@style/standard_item_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/default_page_padding"
            android:layout_toLeftOf="@+id/tv_right"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ddddd" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/standard_item_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_left"
            android:layout_alignBottom="@+id/tv_left"
            android:layout_alignRight="@+id/tv_title"
            android:text="ddddd" />

        <LinearLayout
            android:id="@+id/layout_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_xq" />

            <TextView
                android:id="@+id/text_right"
                style="@style/standard_item_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_qs" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>