<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.thunisoft.sswy.mobile.view.SafeWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_tips"
        style="@style/text_explanatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/default_page_padding"
        android:drawableTop="@drawable/nodata"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_refresh"
        style="@style/dialog_btn_negative"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/tv_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_page_padding"
        android:paddingLeft="@dimen/big_page_padding"
        android:paddingRight="@dimen/big_page_padding"
        android:text="@string/text_sx" />

</RelativeLayout>