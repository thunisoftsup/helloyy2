<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/no_corner_list_bg_sl"
    android:clickable="true"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1px" 
        android:background="@drawable/nocorner_style_white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="状态 :"
                android:textColor="#999999"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_CAjzt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="7dp"
                android:text="审理"
                android:textColor="#666666"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_DCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="left"
                android:padding="7dp"
                android:text="2014-2-22 20:22:55"
                android:layout_marginRight="5dp"
                android:textColor="#999999"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="动态 :"
                 android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_CTemplateMc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="7dp"
                android:text="变更承办人"
                android:textColor="#666666"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                 android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                android:id="@+id/tv_CXxnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="left"
                android:text="乎不能实时获取高度，要在显示后，如果textview在setText后必须马上知道高度怎么做？"
                android:textColor="#999999"
                android:textSize="15dp" 
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>