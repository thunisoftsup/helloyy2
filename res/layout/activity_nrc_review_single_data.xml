<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_default"
    android:orientation="vertical" >

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nrc_review_basic_margin"
        android:paddingLeft="@dimen/nrc_review_basic_margin"
        android:paddingRight="@dimen/nrc_review_basic_margin"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/nrc_review_basic_margin"
            android:paddingTop="@dimen/nrc_review_basic_margin" >

            <TextView
                android:id="@+id/name"
                style="@style/text_nrc_review_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市某某股份有限公司" />

            <TextView
                android:id="@+id/sex"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男 " />
        </LinearLayout>
        
        <TextView
            android:id="@+id/occupation"
            style="@style/text_nrc_review_assist"
            android:paddingBottom="@dimen/nrc_review_basic_margin"
            android:layout_marginBottom="1px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="律师" />

        <LinearLayout
            android:id="@+id/cardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_card"/>

            <TextView
                android:id="@+id/card"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证：12321321321321" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_phone" />

            <TextView
                android:id="@+id/phone"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13818181818" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/addressInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_address" />

            <TextView
                android:id="@+id/address"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/other_name_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_favorable" />

            <TextView
                android:id="@+id/other_name"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="有利方：张三" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lawyer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
            
            <LinearLayout
            android:id="@+id/Lawyer_card_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_license" />

            <TextView
                android:id="@+id/Lawyer_card"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13818181818" />
        	</LinearLayout>

            <LinearLayout
            android:id="@+id/company_name_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_company" />

            <TextView
                android:id="@+id/company_name"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx事务所" />
        	</LinearLayout>
        	
            <LinearLayout
            android:id="@+id/lawyer_other_name_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nrc_info_litigant" />

            <TextView
                android:id="@+id/lawyer_other_name"
                style="@style/text_nrc_review_assist"
                android:layout_marginLeft="@dimen/nrc_review_basic_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="法定人代表：张三丰" />
        	</LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>