<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_height"
        android:background="@color/bg_default" >

        
        <LinearLayout
            android:id="@+id/nrc_aa_back"
            android:layout_width="@dimen/common_header_height"
            android:layout_height="@dimen/common_header_height"
            android:background="@drawable/titlebtn_selector"
            android:contentDescription="@string/desciption_btn_back"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/head_x_size"
                android:layout_height="@dimen/head_x_size"
                android:src="@drawable/cancel_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/nrc_aa_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/transparent"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_size_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nrc_aa_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加代理人"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:layout_marginTop="@dimen/nrc_aa_base_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <RelativeLayout 
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="@dimen/nrc_aa_item_height"
                    android:layout_marginLeft="20dp">
	                <TextView
	                    android:layout_width="70dp"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:text="类型"
	                    android:textColor="@color/text_color_black"
	                    android:textSize="@dimen/font_size_16" />
	                <View
	                    android:layout_width="1px"
	                    android:layout_height="match_parent"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginRight="30dp"
	                    android:background="@color/divider_color_gray" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/nrc_aa_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="20dp"
                     >

                    <TextView
                        android:id="@+id/nrc_aa_type_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="律师"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textColor="@color/text_color_deep_black"
                        android:textSize="@dimen/font_size_16" />

                    <View
                        android:layout_width="@dimen/nrc_bottom_arrow_width"
                        android:layout_height="@dimen/nrc_bottom_arrow_height"
                        android:background="@drawable/arrow_bottom_expand" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:layout_marginTop="@dimen/nrc_aa_base_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/nrc_aa_base_padding" >

                <TextView
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="姓名"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <EditText
                    android:id="@+id/nrc_aa_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_deep_black"
                    android:textSize="@dimen/font_size_16"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:layout_marginTop="@dimen/nrc_aa_base_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                 >

                <LinearLayout
                    android:id="@+id/nrc_aa_certificate_type"
                    android:layout_marginLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nrc_aa_certificate_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                   
                        android:text="护照"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/font_size_16" />

                    <View
                        android:layout_width="@dimen/nrc_bottom_arrow_width"
                        android:layout_height="@dimen/nrc_bottom_arrow_height"
                        android:background="@drawable/arrow_bottom_expand" />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    >
                <View
	                    android:layout_width="1px"
	                    android:layout_height="match_parent"
	                    
	                    
	                    android:background="@color/divider_color_gray" />
                </LinearLayout>

                <EditText
                    android:id="@+id/nrc_aa_certificate_type_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:digits="@string/id_card_regex"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/text_color_deep_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/nrc_aa_base_padding" >

                <TextView
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="手机号码"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <EditText
                    android:id="@+id/nrc_aa_tel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/text_color_deep_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nrc_aa_practice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:layout_marginTop="@dimen/nrc_aa_base_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/nrc_aa_base_padding" >

                <TextView
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="执业证号"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <EditText
                    android:id="@+id/nrc_aa_practice_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:inputType="text"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/text_color_deep_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:id="@+id/nrc_aa_law"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/nrc_aa_base_padding" >

                <TextView
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="所在单位"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <EditText
                    android:id="@+id/nrc_aa_law_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/text_color_deep_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/nrc_aa_base_padding" >

                <TextView
                    android:layout_width="@dimen/nrc_al_left_tip_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="被代理人"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <RelativeLayout
                    android:id="@+id/nrc_aa_agented"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/nrc_aa_agented_arrow"
                        android:layout_width="@dimen/nrc_right_arrow_width"
                        android:layout_height="@dimen/nrc_right_arrow_height"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/arrow_right_black" />
                    
                    <TextView
                        android:id="@+id/nrc_aa_agented_names"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toLeftOf="@id/nrc_aa_agented_arrow"
                        android:textSize="@dimen/font_size_16"/>

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/nrc_aa_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nrc_aa_delete_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/nrc_aa_base_margin"
                android:background="@color/white"
                android:text="删  除"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>