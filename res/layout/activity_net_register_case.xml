                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_dp_15"
                    android:background="@color/divider_color_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/nrc_basic_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/text_color_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="审核："
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/nrc_check_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="未通过"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/nrc_check_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="2015-09-01"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_size_16" />

                        <View
                            android:layout_width="@dimen/nrc_right_arrow_width"
                            android:layout_height="@dimen/nrc_right_arrow_height"
                            android:layout_marginRight="@dimen/margin_20"
                            android:background="@drawable/arrow_right_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color_gray"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingTop="@dimen/padding_15"
                android:text="当事人"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:id="@+id/nrc_add_plaintiff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/add_plaintiff_pressed_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="添加原告"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <com.thunisoft.sswy.mobile.view.NoScrollListView
                android:id="@+id/nrc_plaintiff_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nrc_plaintiff_view_more"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/nrc_plaintiff_view_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多" />

                <View
                    android:layout_width="@dimen/nrc_right_arrow_width"
                    android:layout_height="@dimen/nrc_right_arrow_height"
                    android:background="@drawable/arrow_right_black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_dp_5"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:id="@+id/nrc_add_defendant"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/add_plaintiff_pressed_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="添加被告"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <com.thunisoft.sswy.mobile.view.NoScrollListView
                android:id="@+id/nrc_defendant_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nrc_defendant_view_more"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/nrc_defendant_view_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多" />

                <View
                    android:layout_width="@dimen/nrc_right_arrow_width"
                    android:layout_height="@dimen/nrc_right_arrow_height"
                    android:background="@drawable/arrow_right_black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color_gray"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingTop="@dimen/padding_15"
                android:text="代理人"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:id="@+id/nrc_add_agent"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/add_plaintiff_pressed_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="添加代理人"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <com.thunisoft.sswy.mobile.view.NoScrollListView
                android:id="@+id/nrc_agent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nrc_agent_view_more"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/nrc_agent_view_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多" />

                <View
                    android:layout_width="@dimen/nrc_right_arrow_width"
                    android:layout_height="@dimen/nrc_right_arrow_height"
                    android:background="@drawable/arrow_right_black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color_gray"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingTop="@dimen/padding_15"
                android:text="证人"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:id="@+id/nrc_add_witness"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/add_plaintiff_pressed_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="添加证人"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <com.thunisoft.sswy.mobile.view.NoScrollListView
                android:id="@+id/nrc_witness_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nrc_witness_view_more"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/nrc_witness_view_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多" />

                <View
                    android:layout_width="@dimen/nrc_right_arrow_width"
                    android:layout_height="@dimen/nrc_right_arrow_height"
                    android:background="@drawable/arrow_right_black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color_gray"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingTop="@dimen/padding_15"
                android:text="诉讼材料"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:id="@+id/nrc_add_indictment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/add_plaintiff_pressed_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="添加起诉状"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <com.thunisoft.sswy.mobile.view.NoScrollListView
                android:id="@+id/nrc_indictment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nrc_indictment_view_more"
                android:layout_width="match_parent"
