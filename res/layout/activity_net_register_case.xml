                <View
                    android:layout_width="@dimen/nrc_right_arrow_width"
                    android:layout_height="@dimen/nrc_right_arrow_height"
                    android:background="@drawable/arrow_right_black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_dp_5"
                android:background="@color/divider_color_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/nrc_add_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/add_plaintiff_pressed_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nrc_add_certificate_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:background="@drawable/add_btn"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="添加证件"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nrc_certificate_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nrc_certificate_tip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/font_size_12" />

                    <View
                        android:layout_width="@dimen/nrc_right_arrow_width"
                        android:layout_height="@dimen/nrc_right_arrow_height"
                        android:background="@drawable/arrow_right_black" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
