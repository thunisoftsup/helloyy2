<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_height"
        android:background="@color/bg_default"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/nrc_cancel"
            android:layout_width="@dimen/common_header_height"
            android:layout_height="@dimen/common_header_height"
            android:background="@drawable/titlebtn_selector"
            android:contentDescription="@string/desciption_btn_back"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/head_x_size"
                android:layout_height="@dimen/head_x_size"
                android:src="@drawable/cancel_btn" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#2557c2" />

        <TextView
            android:id="@+id/nrc_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="暂存"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_size_20"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nrc_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_color_green"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/nrc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_dp_8"
                android:background="@color/divider_color_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="@dimen/padding_10" >

                <TextView
                    android:id="@+id/nrc_create_time_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="创建于"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/nrc_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nrc_create_time_tip"
                    android:text="2015-01-01 "
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/nrc_update_time_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="最近修改 "
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/nrc_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/nrc_update_time_tip"
                    android:text="2015-01-01 01:01:01"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法院  :"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/nrc_court_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湖南省高级人民法院"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="14dp"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案件类型："
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/nrc_case_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="民事"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nrc_judge_program_margin_left"
                    android:text="申请类别："
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/nrc_judge_program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起诉"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请人 :"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/nrc_applicant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="张三"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20" >

                <TextView
                    android:id="@+id/nrc_applicant_certificate_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证："
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/nrc_applicant_certificate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话号码："
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/nrc_applicant_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13000006666"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
