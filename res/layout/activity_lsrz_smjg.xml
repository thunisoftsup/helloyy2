<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_default"
    android:orientation="vertical" >

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_page_padding"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_page_padding"
        android:paddingRight="@dimen/default_page_padding" >

        <TextView
            android:id="@+id/tv_sm_lsrz"
            style="@style/text_explanatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_text_size"
            android:paddingLeft="@dimen/default_page_padding"
            android:paddingRight="@dimen/default_page_padding"
            android:paddingTop="@dimen/default_text_size"
            android:gravity="center"
            android:text="@string/text_smcg" />

        <TextView
            style="@style/text_explanatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_group_margin_top"
            android:text="@string/text_lsrzxx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_page_padding"
            android:background="@drawable/corner_bg_devider"
            android:orientation="vertical"
            android:padding="@dimen/border_width" >

            <RelativeLayout
                style="@style/list_item_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height" >

                <TextView
                    style="@style/list_item_text_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/text_xm" />

                <TextView
                    android:id="@+id/tv_lsmc"
                    style="@style/list_item_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height" >

                <TextView
                    style="@style/list_item_text_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/text_zjhm" />

                <TextView
                    android:id="@+id/tv_zjhm"
                    style="@style/list_item_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height" >

                <TextView
                    style="@style/list_item_text_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/text_zyzh" />

                <TextView
                    android:id="@+id/tv_zyzh"
                    style="@style/list_item_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_lsrz"
            style="@style/normal_btn_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/default_page_padding"
            android:text="@string/btn_text_rz" />
    </LinearLayout>

</LinearLayout>