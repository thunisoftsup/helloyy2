<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/switchTwoTabs"
    android:layout_height="@dimen/switch_tab_height"
    android:layout_marginLeft="@dimen/switch_tab_margin"
    android:layout_marginRight="@dimen/switch_tab_margin"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/radio_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/switch_tab_left_selector"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:textColor="@drawable/switch_tab_text_color_selector" />

    <RadioButton
        android:id="@+id/radio_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/switch_tab_right_selector"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/switch_tab_text_color_selector" />

</RadioGroup>