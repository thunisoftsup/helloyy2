<?xml version="1.0" encoding="utf-8"?>
<!-- 关联当事人 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_height"
        android:background="@color/bg_default" >
        nrc_rel_litigant_back
        <LinearLayout
            android:id="@+id/nrc_rel_litigant_back"
            android:layout_width="@dimen/common_header_height"
            android:layout_height="@dimen/common_header_height"
            android:background="@drawable/titlebtn_selector"
            android:contentDescription="@string/desciption_btn_back"
            android:gravity="center" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:src="@drawable/backarrow_new" />
        </LinearLayout>

        <TextView
            android:id="@+id/nrc_rel_litigant_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_size_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nrc_rel_litigant_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="关联原告"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nrc_rel_litigant_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="原告" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/nrc_rel_litigant_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:textColor="#517de7"
            android:text="@string/nrc_select_all" />
    </LinearLayout>

    <ListView
        android:id="@+id/nrc_rel_litigant_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="#00000000"/>

</LinearLayout>