<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:background="@color/white">"

        <TextView
            android:id="@+id/dialog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/building_tip_warning"/>

        <TextView
            android:id="@+id/tv_tip_message"
            style="@style/dialog_text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_image"
            android:paddingBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dialog_small_space"
            android:text="@string/text_default" />
            
        <Button
            android:id="@+id/btn_positive"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/building_tip_cancel"/>

    </RelativeLayout>


</RelativeLayout>