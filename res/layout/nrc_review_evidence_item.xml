<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/nrc_review_basic_margin"
    android:paddingBottom="@dimen/nrc_review_basic_margin"
    android:orientation="vertical"
    android:background="@drawable/corner_nrc_litigant_item_bg">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/nrc_review_basic_margin"
        android:paddingRight="@dimen/nrc_review_basic_margin"
        android:layout_marginBottom="@dimen/nrc_review_basic_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/evidence_name"
            style="@style/text_nrc_review_main"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="证据名称：证明合同关系文件"/>
        <TextView 
            android:id="@+id/evidence_owner"
            style="@style/text_nrc_review_main"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="归属人：张三"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/evidence_from"
        style="@style/text_nrc_review_assist"
        android:layout_marginTop="@dimen/nrc_review_basic_margin"
        android:paddingLeft="@dimen/nrc_review_basic_margin"
        android:paddingRight="@dimen/nrc_review_basic_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="证明来源："/>
    <TextView 
        android:id="@+id/evidence_problem"
        style="@style/text_nrc_review_assist"
        android:paddingLeft="@dimen/nrc_review_basic_margin"
        android:paddingRight="@dimen/nrc_review_basic_margin"
        android:layout_marginTop="@dimen/nrc_review_small_margin"
        android:layout_marginBottom="@dimen/nrc_review_basic_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="证明问题："/>

    <com.thunisoft.sswy.mobile.view.NoScrollListView
        android:id="@+id/evidence_image"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>


</LinearLayout>